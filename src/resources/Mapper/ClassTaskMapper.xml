<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ximingren.CourseSchedule.Dao.ClassTaskDao">

    <resultMap id="BaseResultMap" type="com.ximingren.CourseSchedule.Bean.po.ClassTask">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="semester" jdbcType="VARCHAR" property="semester"/>
        <result column="collegeNo" jdbcType="VARCHAR" property="collegeno"/>
        <result column="classNo" jdbcType="VARCHAR" property="classno"/>
        <result column="courseNo" jdbcType="VARCHAR" property="courseno"/>
        <result column="teacherNo" jdbcType="VARCHAR" property="teacherno"/>
        <result column="courseAttr" jdbcType="VARCHAR" property="courseattr"/>
        <result column="studentNumber" jdbcType="INTEGER" property="studentnumber"/>
        <result column="weeksSum" jdbcType="INTEGER" property="weekssum"/>
        <result column="weeksNumber" jdbcType="INTEGER" property="weeksnumber"/>
        <result column="isFix" jdbcType="VARCHAR" property="isfix"/>
        <result column="classTime" jdbcType="VARCHAR" property="classtime"/>
    </resultMap>

    <select id="selectBySemester" resultMap="BaseResultMap" parameterType="com.ximingren.CourseSchedule.Bean.po.ClassTask">
        select * from class_task where semester=#{semester,jdbcType=VARCHAR}
    </select>

    <select id="selectByColumnName" resultType="java.lang.String" parameterType="java.lang.String">
        select distinct  ${columnName} from class_task
    </select>
    <select id="selectAll" resultMap="BaseResultMap" parameterType="com.ximingren.CourseSchedule.Bean.po.ClassTask">
        SELECT
        *
        FROM
        (
        SELECT
        clt.id,
        clt.semester,
        clt.collegeNo,
        cli.className AS classNo,
        coi.courseName AS courseNo,
        tei.teacherName AS teacherNo,
        clt.courseAttr,
        clt.studentNumber,
        clt.weeksSum,
        clt.weeksNumber,
        clt.isFix,
        clt.classTime
        FROM
        class_task clt,
        class_info cli,
        course_info coi,
        teacher_info tei
        WHERE
        cli.classNo=clt.classNo
        AND
        coi.courseNo=clt.courseNo
        AND clt.teacherNo=tei.teacherNo
        <if test="collegeno!=null">
            AND clt.collegeNo=#{collegeno}
        </if>
        ORDER BY clt.id
        )AS temp
        <if test="condition!=null">
            WHERE semester LIKE concat('%',#{condition},'%')
            OR classNo LIKE concat('%',#{condition},'%')
            OR courseNo LIKE concat('%',#{condition})
            OR teacherNo LIKE concat ('%',#{condition},'%')
         </if>
    </select>
</mapper>