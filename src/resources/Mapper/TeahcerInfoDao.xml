<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ximingren.CourseSchedule.Dao.TeacherInfoDao">

    <resultMap id="BaseResultMap" type="com.ximingren.CourseSchedule.Bean.po.TeacherInfo">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="teacherNo" jdbcType="VARCHAR" property="teacherno"/>
        <result column="teacherName" jdbcType="VARCHAR" property="teachername"/>
        <result column="collegeNo" jdbcType="VARCHAR" property="collegeno"/>
        <result column="age" jdbcType="INTEGER" property="age"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="role" jdbcType="VARCHAR" property="role"/>
    </resultMap>
    <select id="selectAll" resultMap="BaseResultMap" parameterType="com.ximingren.CourseSchedule.Bean.vo.QueryVO">
        -- 先获取教师编号、教师名，学院名，年龄，职称
        -- 再从其中获取相应的数据
        <if test="collegeno!=null">
            SELECT
            *
            FROM
            (
            SELECT
            teacher_info.id,
            teacherNo,
            teacherName,
            college_info.collegeName,
            college_info.collegeNo AS collegeNo,
            age,
            title
            FROM
            teacher_info,
            college_info
            WHERE teacher_info.collegeNo=#{collegeno}
            AND teacher_info.collegeNo=college_info.collegeNo
            ORDER BY teacher_info.id
            )AS temp
            <if test="condition!=null">
                WHERE teacherName like concat('%',#{condition},'%')
            </if>
            <if test="pageParam != null">
                LIMIT #{pageParam.pageStart},#{pageParam.pageSize}
            </if>
        </if>
        <if test="collegeno==null">
            select *
            from teacher_info
            <if test="pageParam != null">
                LIMIT #{pageParam.pageStart},#{pageParam.pageSize}
            </if>
        </if>
    </select>

    <update id="updateByPrimaryKey" parameterType="com.ximingren.CourseSchedule.Bean.po.TeacherInfo">
        update teacher_info
        <set>
            <if test="teacherno != null">
                teacherno = #{teacherno,jdbcType=VARCHAR},
            </if>
            <if test="teachername != null">
                teachername = #{teachername,jdbcType=VARCHAR},
            </if>
            <if test="collegeno != null">
                collegeno = #{collegeno,jdbcType=VARCHAR},
            </if>
            <if test="age != null">
                age = #{age,jdbcType=INTEGER},
            </if>
            <if test="title != null">
                title = #{title,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=BIGINT}
    </update>
    <delete id="deleteByPrimaryKey" parameterType="com.ximingren.CourseSchedule.Bean.po.TeacherInfo">
    delete from teacher_info
    where id = #{id,jdbcType=BIGINT}
  </delete>

    <insert id="insert" parameterType="com.ximingren.CourseSchedule.Bean.po.TeacherInfo">
        insert into teacher_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="teacherno != null">
                teacherNo,
            </if>
            <if test="teachername != null">
                teacherName,
            </if>
            <if test="collegeno != null">
                collegeNo,
            </if>
            <if test="age != null">
                age,
            </if>
            <if test="title != null">
                title,
            </if>

        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="teacherno != null">
                #{teacherno,jdbcType=VARCHAR},
            </if>
            <if test="teachername != null">
                #{teachername,jdbcType=VARCHAR},
            </if>
            <if test="collegeno != null">
                #{collegeno,jdbcType=VARCHAR},
            </if>
            <if test="age != null">
                #{age,jdbcType=INTEGER},
            </if>
            <if test="title != null">
                #{title,jdbcType=VARCHAR}
            </if>
        </trim>
    </insert>
    <select id="getCount" resultType="java.lang.Integer">
          select count(id) from teacher_info;
    </select>
    <select id="findTeacher" resultMap="BaseResultMap" parameterType="java.lang.String">
        select * from teacher_info
        where teacherNo=#{username} AND password=#{password}
    </select>
</mapper>